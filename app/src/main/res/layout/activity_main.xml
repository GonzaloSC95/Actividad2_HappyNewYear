<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY"
        android:src="@drawable/marvelhorizontal"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/felizanio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="73dp"
        android:background="@drawable/stilo_borde"
        android:fontFamily="sans-serif-light"
        android:text="@string/feliz2022"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/seTuHeroe"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="186dp"
        android:layout_marginEnd="29dp"
        android:background="@drawable/stilo_borde"
        android:fontFamily="sans-serif-light"
        android:text="@string/seTuHerore"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <ImageView
        android:id="@+id/spidey"
        android:layout_width="182dp"
        android:layout_height="214dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="145dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="170dp"
        android:src="@drawable/spiderman"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="205dp"
        android:contentDescription="@string/spiderman" />

    <ImageView
        android:id="@+id/gonTitulo"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="376dp"
        app:srcCompat="@drawable/gon_titulo"
        android:contentDescription="@string/gon" />

    <ImageView
        android:id="@+id/gorro"
        android:layout_width="57dp"
        android:layout_height="93dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="49dp"
        android:contentDescription="@string/gorro"
        app:srcCompat="@drawable/gorro" />


</RelativeLayout>